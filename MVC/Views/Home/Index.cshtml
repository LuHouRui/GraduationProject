@model IEnumerable<MVC.Models.UserData>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if(ViewBag.Message != null)
{
    @Html.Label("Info", (string)ViewBag.Message, new { @class = "text-info"})
}
<p>
    @Html.ActionLink("新增資料", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.village)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.account)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.village)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id = item.UID }, new { @class = "btn btn-default" })
        </td>
        <td>           
            @Html.ActionLink("詳細", "Details", new { id = item.UID }, new { @class = "btn btn-default" })
        </td>
        <td>
        @using (Html.BeginForm("Delete", "Home", FormMethod.Post, new { @class = "Delete" }))
        {
            @Html.Hidden("id", item.UID);
            <input type="submit" value="刪除" class="btn btn-warning" />
        }
        </td>
    </tr>
}

</table>
