@model MVC.Models.MainViewModel
@{
    var Schedule_List = Model.Scheules;
    var Guider_List = Model.Guiders;
    Layout = "";
}

<table class="table">
    <tr>
        <th>
            編號
        </th>
        <th>
            姓名
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Guider_List)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("指派導遊", "Assign", "Main", new { id = Schedule_List[0].id, guider = item.Number }, new { @class = "btn btn-dark btn-sm" })
            </td>
        </tr>
    }
</table>