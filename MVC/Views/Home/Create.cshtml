@model MVC.Models.UserData

@{
    ViewBag.Title = "Create";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*加入兩個js檔案，讓頁面支援客戶端驗證*@
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

<h2>Create</h2>

