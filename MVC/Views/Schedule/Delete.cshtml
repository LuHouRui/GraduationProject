@model MVC.Models.Schedule

@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Schedule</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.id)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.id)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.start)
            </dt>

            <dd>
                @Model.start.ToShortDateString()
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.end)
            </dt>

            <dd>
                @Model.end.AddDays(-1).ToShortDateString()
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.discription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.discription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.guider)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.guider)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.color)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.color)
            </dd>
            @if (Model.title != "請假")
            {
                <dt>
                    @Html.DisplayNameFor(model => model.filepath)
                </dt>

                <dd>
                    @Html.ActionLink("開啟檔案", "GetReport", new { path = Model.filepath }, new { @class = "btn btn-info btn-sm", @target = "_blank" })
                </dd>
            }
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-info btn-sm" /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-info btn-sm" })
        </div>
        }
    </div>
</body>
</html>
